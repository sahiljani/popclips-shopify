{% comment %}
  Popclips Video Carousel Block
  Works on ANY Shopify theme with automatic color inheritance
{% endcomment %}

{% schema %}
{
  "name": "Popclips Video Carousel",
  "target": "section",
  "javascript": "popclips-carousel.js",
  "stylesheet": "popclips.css",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop Our Looks"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        { "value": "h2", "label": "Medium" },
        { "value": "h1", "label": "Large" },
        { "value": "h3", "label": "Small" }
      ],
      "default": "h2"
    },
    {
      "type": "text",
      "id": "carousel_id",
      "label": "Carousel ID (optional)",
      "info": "Leave blank to show the default carousel"
    },
    {
      "type": "checkbox",
      "id": "use_theme_colors",
      "label": "Use theme colors",
      "default": true
    },
    {
      "type": "color",
      "id": "custom_bg",
      "label": "Custom background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "custom_text",
      "label": "Custom text color",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "custom_accent",
      "label": "Custom accent color",
      "default": "#FF6B6B"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Popclips Video Carousel"
    }
  ]
}
{% endschema %}

<div
  class="popclips-section"
  data-popclips-carousel
  data-carousel-id="{{ block.settings.carousel_id }}"
  data-shop="{{ shop.permanent_domain }}"
  data-location="{% if template.name == 'index' %}homepage{% elsif template.name == 'collection' %}collection{% elsif template.name == 'product' %}product{% else %}other{% endif %}"
  style="
    --popclips-section-padding-top: {{ block.settings.padding_top }}px;
    --popclips-section-padding-bottom: {{ block.settings.padding_bottom }}px;
    {% unless block.settings.use_theme_colors %}
    --popclips-bg: {{ block.settings.custom_bg }};
    --popclips-text: {{ block.settings.custom_text }};
    --popclips-accent: {{ block.settings.custom_accent }};
    {% endunless %}
  "
>
  <div class="popclips-container">
    {% if block.settings.heading != blank %}
      <{{ block.settings.heading_size }} class="popclips-heading">
        {{ block.settings.heading }}
      </{{ block.settings.heading_size }}>
    {% endif %}

    <div class="popclips-carousel" data-popclips-slider>
      <div class="popclips-carousel__loading">
        <div class="popclips-spinner"></div>
        <span>Loading videos...</span>
      </div>
    </div>

    <div class="popclips-carousel__nav">
      <button class="popclips-carousel__prev" data-popclips-prev aria-label="Previous">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>
      <div class="popclips-carousel__dots" data-popclips-dots></div>
      <button class="popclips-carousel__next" data-popclips-next aria-label="Next">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    </div>
  </div>

  <div class="popclips-modal" data-popclips-modal hidden>
    <div class="popclips-modal__backdrop" data-popclips-modal-close></div>
    <div class="popclips-modal__content">
      <button class="popclips-modal__close" data-popclips-modal-close aria-label="Close">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
      <div class="popclips-player" data-popclips-player></div>
      <div class="popclips-products" data-popclips-products></div>
    </div>
  </div>
</div>
